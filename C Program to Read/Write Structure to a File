#include <stdio.h>
#include <stdlib.h>

struct Student {
    int id;
    char name[50];
    int age;
};

int main() {
    FILE *fp;
    struct Student s[100], temp;
    int n, i;

    printf("How many students do you want to store? ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nEnter details of student %d:\n", i + 1);

        printf("ID: ");
        scanf("%d", &s[i].id);

        printf("Name: ");
        scanf("%s", s[i].name);

        printf("Age: ");
        scanf("%d", &s[i].age);
    }

    fp = fopen("students.dat", "wb");
    if (fp == NULL) {
        printf("File cannot be opened!\n");
        return 1;
    }

    fwrite(s, sizeof(struct Student), n, fp);
    fclose(fp);

    printf("\nData written to file successfully!\n");

    fp = fopen("students.dat", "rb");
    if (fp == NULL) {
        printf("File cannot be opened!\n");
        return 1;
    }

    printf("\nReading data from file:\n\n");
    for (i = 0; i < n; i++) {
        fread(&temp, sizeof(struct Student), 1, fp);
        printf("ID: %d\n", temp.id);
        printf("Name: %s\n", temp.name);
        printf("Age: %d\n\n", temp.age);
    }

    fclose(fp);
    return 0;
}
