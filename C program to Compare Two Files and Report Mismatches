#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *fp1, *fp2;
    char file1[260], file2[260];

    printf("Enter first file: ");
    scanf("%s", file1);

    printf("Enter second file: ");
    scanf("%s", file2);

    fp1 = fopen(file1, "rb");
    fp2 = fopen(file2, "rb");

    if (!fp1 || !fp2) {
        printf("Error: Could not open one of the files.\n");
        return 1;
    }

    int ch1, ch2;
    long pos = 0;
    int mismatchCount = 0;

    while (1) {
        ch1 = fgetc(fp1);
        ch2 = fgetc(fp2);

        if (ch1 == EOF || ch2 == EOF) break;

        if (ch1 != ch2) {
            mismatchCount++;
            printf("Mismatch at byte %ld: %02X vs %02X\n", pos, ch1 & 0xFF, ch2 & 0xFF);
        }

        pos++;
    }

    if (ch1 != ch2) {
        printf("Files differ in length.\n");
        mismatchCount++;
    }

    if (mismatchCount == 0) {
        printf("Files are identical.\n");
    } else {
        printf("Total mismatches: %d\n", mismatchCount);
    }

    fclose(fp1);
    fclose(fp2);

    return 0;
}
